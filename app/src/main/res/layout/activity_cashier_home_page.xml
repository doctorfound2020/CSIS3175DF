<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003459"
    tools:context=".CashierHomePageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitleCashierHomePage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:text="@string/txtTitleCashierHomePage"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:textStyle="bold"
            app:fontFamily="serif"
            android:gravity="center"/>

        <View
            android:id="@+id/dChm1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#007EA7" />

        <ImageView
            android:id="@+id/imgCashierHomePage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:src="@drawable/cashier_home_page"
            android:contentDescription="@string/imgCashierHomePage"/>

        <TextView
            android:id="@+id/txtInstructionsCashierHomePage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/txtInstructionsHomePage"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="italic"
            app:fontFamily="serif" />

        <View
            android:id="@+id/dChm2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#007EA7" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <Button
                android:id="@+id/btnViewAllAppointment"
                android:layout_width="375dp"
                android:layout_height="150dp"
                android:layout_row="0"
                android:layout_columnSpan="2"
                android:layout_margin="15dp"
                android:background="#FFFFFF"
                android:text="@string/btnViewAllAppointment"
                android:textSize="25sp"
                android:textStyle="bold"
                app:fontFamily="serif" />

            <View
                android:id="@+id/dChm3"
                android:layout_row="1"
                android:layout_columnSpan="2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#007EA7"  />

            <Button
                android:id="@+id/btnSendReminderDoctorPatient"
                android:layout_width="375dp"
                android:layout_height="150dp"
                android:layout_row="2"
                android:layout_columnSpan="2"
                android:layout_margin="15dp"
                android:layout_marginTop="25dp"
                android:background="#FFFFFF"
                android:text="@string/btnSendReminderDoctorPatient"
                android:textSize="25sp"
                android:textStyle="bold"
                app:fontFamily="serif" />

        </GridLayout>

    </LinearLayout>

</ScrollView>